TEST "happy path"
  launch 
  alexa: waitForName 
  user: "my name is Dude"
  @name == "Dude"
  END

  launch
  alexa: waitForName 
  user: "my name is Rose"
  @name == "Rose"
  END


TEST "asking for help"
  launch 
  alexa: waitForName
  user: AMAZON.HelpIntent
  # This will verify that your skill is now in the waitForName state and 
  # executed a 'say' command that matches the /tell me your name/i regex.
  # For other supported syntaxes check the Language Reference for 'alexa:'
  alexa: waitForName, /tell me your name/i 
  user: "Jimbo"
  END
